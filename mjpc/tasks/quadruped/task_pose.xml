<mujoco model="Quadruped Pose">
  <include file="../common.xml"/>
  <size memory="16M" nconmax="256"/>

  <statistic center="0 0 0.1" extent="0.8"/>

  <custom>
    <!-- agent -->
    <text name="task_transition" data="Quadruped|Biped|Walk|Scramble|Flip"/>
    <numeric name="agent_planner" data="2"/>
    <numeric name="agent_horizon" data="0.35"/>
    <numeric name="agent_timestep" data="0.01"/>
    <numeric name="sampling_spline_points" data="3"/>
    <numeric name="sampling_trajectories" data="60"/>
    <numeric name="sampling_exploration" data="0.04"/>
    <numeric name="gradient_spline_points" data="5"/>

    <!-- residual -->
    <numeric name="residual_select_Gait" data="0"/>
    <text name="residual_list_Gait" data="Stand|Walk|Trot|Canter|Gallop"/>
    <numeric name="residual_select_Gait switch" data="1"/>
    <text name="residual_list_Gait switch" data="Manual|Automatic"/>
    <numeric name="residual_Cadence" data="0.95 0 4"/>
    <numeric name="residual_Amplitude" data=".06 0 0.2"/>
    <numeric name="residual_Duty ratio" data="0.75 0 1"/>
    <numeric name="residual_Walk speed" data="0 0 4"/>
    <numeric name="residual_Walk turn" data="0 -2 2"/>
    <numeric name="residual_select_Flip dir" data="0"/>
    <text name="residual_list_Flip dir" data="Back Flip|Front Flip"/>
    <numeric name="residual_select_Biped type" data="0"/>
    <text name="residual_list_Biped type" data="Foot Stand|Hand Stand"/>
    <numeric name="residual_Heading" data="0 -3.14 3.14"/>
    <numeric name="residual_Arm posture" data=".03 0 1"/>

    <!-- Pose selection tab -->
    <text name="residual_list_Pose" data="None|Pose 1|Pose 2|Pose 3|Pose 4|Pose 5|Pose 6"/>
    <numeric name="residual_select_Pose" data="0"/>

    <!-- estimator -->
    <numeric name="estimator" data="1"/>
    <numeric name="estimator_sensor_start" data="9"/>
    <numeric name="estimator_number_sensor" data="21"/>
    <numeric name="estimator_timestep" data="0.005"/>
    <numeric name="batch_configuration_length" data="3"/>
    <numeric name="batch_scale_prior" data="1.0e-3"/>
    <!-- planner defaults -->
    <numeric name="derivative_skip" data="2"/>
  </custom>

  <!-- Pose residual term must be declared before non-user sensors appear in go2.xml -->
  <sensor>
    <!-- 12-dim residual: 3 (pos) + 9 (rotmat difference). Weight defaults to 0.2 with L2 norm (2) and epsilon 0.1 -->
    <user name="Pose" dim="12" user="2 0.2 0 2 0.1"/>
  </sensor>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>





    <!-- <hfield name="hf133" file="../assets/white_4x4.png" size="0.5 0.3 0.4 0.001"/> -->
    <hfield name="hf133" file="../assets/white_21x13.png" size="0.5 0.35 1 2"/>
    <texture type="2d" name="terrain_tex" file="assets/martian.png"/> <!-- builtin="checker" mark="edge" rgb1="0.18 0.0 0.25" rgb2="0.10 0.0 0.15" markrgb="1.0 0.5 0.0" width="300" height="300"/> -->
    <material name="terrain_mat" texture="terrain_tex" texuniform="true" texrepeat="64 64" reflectance="0"/>

  </asset>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" diffuse="0.5 0.5 0.5" specular="0.3 0.3 0.3" directional="true" castshadow="false"/>
    <geom name="floor" size="50 50 0.05" pos="0 0 -0.01" type="plane" material="groundplane"/>

    <geom name="terrain"
          pos="1.0 0 0"
          type="hfield"
          hfield="hf133"
          material="terrain_mat"
          condim="3"/>

    <body name="goal" mocap="true" pos=".3 0 0.26">
      <geom size="0.12" contype="0" conaffinity="0" rgba="0 1 0 .5" group="2"/>
    </body>
  </worldbody>

  <!-- go2 model -->
  <include file="go2.xml" />

  <!-- keyframes: default 'home' plus 5 pose keys. Initialize poses equal to 'home' to start. -->
  <keyframe>
    <key name="home" qpos="0 0 0.27 1 0 0 0 0 0.9 -1.8 0 0.9 -1.8 0 0.9 -1.8 0 0.9 -1.8"
      ctrl="0 0.9 -1.8 0 0.9 -1.8 0 0.9 -1.8 0 0.9 -1.8"/>
    <key name="pose1" mpos="0.3 0 0.26" mquat="1 0 0 0"/>
    <key name="pose2" mpos="0.4 0 0.26" mquat="1 0 0 0"/>
    <key name="pose3" mpos="0.5 0 0.26" mquat="1 0 0 0"/>
    <key name="pose4" mpos="0.6 0 0.26" mquat="1 0 0 0"/>
    <key name="pose5" mpos="0.7 0 0.26" mquat="1 0 0 0"/>
    <key name="pose6" mpos="0.7 0 0.432" mquat="0.951 0.0421 -0.2936 -0.0901"/>
  </keyframe>

</mujoco> 